set nocompatible
filetype off

colorscheme elflord
syntax enable	" enabled syntax processing

set ignorecase
set smartcase

set tabstop=2	" number of spaces a tab looks like
set softtabstop=2	" number of spaces inserted when hitting tab
set expandtab	" makes it so hitting tab inserts spaces instead of a tab character

set number	  " show line numbers
set showcmd 	" show command in bottom bar
set wildmenu    " command autocomplete menu
set lazyredraw  " redraw only when needed
set incsearch   " search as characters are entered
set hlsearch    " highlight matches

set backspace=indent,eol,start
